#include <iostream>
using namespace std;

int main() {
	// your code goes here
	long t;
	cin>>t;
	while(t--)
	{
	    long n,sum;
	    cin>>n>>sum;
	    int max=INT32_MIN;
	    for(long i=0;i<=n;)
	    {
	        if(sum-i>n)
	        {
	            i++;continue;
	        }
	        else
	        {max=sum-2*i;
	        break;
	        }
	    }
	    cout<<max<<endl;
	}
	return 0;
}
